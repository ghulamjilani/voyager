!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title App
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload"
    = stylesheet_link_tag "application", "data-turbo-track": "reload"
    = javascript_importmap_tags
  %body

  - unless devise_controller? || (controller_name == 'registrations' && action_name == 'edit')
    = render 'layouts/topnav'
    = render 'layouts/sidebar'

  %main.container.sm:ml-64.mt-28.mb-8.px-5.flex.flex-col
    - if notice.present?
      .bg-green-100.border.border-green-400.text-green-700.px-4.py-3.rounded.relative.alert.alert-success.alert-dismissible.fade.show.mt-2.mb-4(role="alert")
        = notice
        %button.absolute.top-0.right-0.px-4.py-3(text="button" data-bs-dismiss="alert" aria-label="Close") ×

    - if alert.present?
      .bg-red-100.border.border-red-400.text-red-700.px-4.py-3.rounded.relative.alert.alert-danger.alert-dismissible.fade.show.mt-2.mb-4(role="alert")
        = alert
        %button.absolute.top-0.right-0.px-4.py-3(text="button" data-bs-dismiss="alert" aria-label="Close") ×
    = yield
